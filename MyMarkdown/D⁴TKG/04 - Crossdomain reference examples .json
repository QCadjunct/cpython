    "QueryPatterns": {
      "FindCrossDomainReferences": {
        "Description": "Query to find all cross-domain references for a term",
        "SQL": "SELECT * FROM Terms WHERE IsCrossDomainReference = true AND SourceTermId = ?",
        "APIEndpoint": "/api/v1/terms/{termId}/cross-domain-refs"
      },
      "ResolveCrossDomainTerm": {
        "Description": "Lookup term details from another domain using SHA-256 ID",
        "Process": [
          "1. Extract CrossDomainRefId from source term",
          "2. Query registry to identify target domain",
          "3. Direct lookup in target glossary using SHA-256 ID",
          "4. Return term details with lineage"
        ],
        "APIEndpoint": "/api/v1/registry/resolve/{sha256Id}"
      },
      "TraverseDomainChain": {
        "Description": "Follow chain of cross-domain references across multiple domains",
        "Example": "Energy (Coal) \u2192 Manufacturing (Steel) \u2192 Construction (Buildings) \u2192 Real Estate (Property)",
        "MaxDepth": 5,
        "APIEndpoint": "/api/v1/registry/traverse?startTermId={id}&maxDepth={n}"
      }
    },
    "ImplementationGuidelines": {
      "BestPractices": [
        "Always use SHA-256 IDs for cross-domain references",
        "Include RelationshipType to describe the nature of the relationship",
        "Add CrossDomainMetadata for business context and justification",
        "Verify both sides of bidirectional relationships",
        "Document quantitative relationships where applicable",
        "Set up monitoring for cross-domain reference integrity"
      ],
      "PerformanceConsiderations": [
        "Cache frequently accessed cross-domain terms",
        "Use async lookups for non-critical cross-domain data",
        "Implement circuit breakers for domain service calls",
        "Monitor cross-domain query latency",
        "Set timeout thresholds (recommended: 200ms)"
      ],
      "GovernanceRequirements": [
        "Cross-domain references require approval from both domain owners",
        "Document business justification for each cross-domain link",
        "Review cross-domain references quarterly",
        "Deprecate orphaned references (target term deleted)",
        "Version control cross-domain relationship schemas"
      ]
    }
